<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top"
    android:orientation="vertical"
    android:padding="8dp">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:background="@drawable/minus"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Заголовок профиля -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CustomShapeImageAvatarMenu" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/user_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="14sp"
                    android:maxLines="1" />

                <ImageView
                    android:id="@+id/premium_badge"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/check_decagram"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/chevron_right"
            android:visibility="gone" />


    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Кнопки действий -->
    <TextView
        android:id="@+id/copy_profile_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:text="Скопировать ссылку"
        android:textColor="@color/black"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/link_variant"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/copy_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:text="Скопировать токен"
        android:textColor="@color/black"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/content_copy"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/copy_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:text="Скопировать ID"
        android:textColor="@color/black"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/id_card_24px"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/autoResponsesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Автоответы"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/edit_24px"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/stikersFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Стикерпаки"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/sticker_circle_outline"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/settingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:text="Настройки"
        android:textColor="@color/black"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_vector_outline_settings"
        android:background="?attr/selectableItemBackground" />

</LinearLayout>