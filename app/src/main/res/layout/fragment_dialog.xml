<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary">

    <!-- Заголовок диалога -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_primary"
        android:orientation="horizontal"
        android:elevation="1dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_left_black"
            app:tint="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="0dp">

            <!-- Аватарка с буквой -->
            <TextView
                android:id="@+id/avatar_text"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/circle_background" />

            <!-- Иконка верификации справа внизу -->
            <ImageView
                android:id="@+id/verified_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignBottom="@id/avatar_text"
                android:layout_alignEnd="@id/avatar_text"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="-2dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/circle_shufle" />

        </RelativeLayout>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:background="@android:color/transparent"
            android:hint="Сиденёв Кирилл"
            android:maxLines="2"
            android:paddingStart="6dp"
            android:paddingEnd="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:visibility="visible"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu"
            app:tint="@color/black"/>

    </LinearLayout>

    <!-- ProgressBar для отображения загрузки -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- SwipeRefreshLayout с RecyclerView для сообщений -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView для сообщений -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Расширенная панель стикеров -->
    <LinearLayout
        android:id="@+id/stickersPanel"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="0dp">

        <!-- Заголовок панели стикеров -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Стикеры"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCloseStickers"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/close"
                app:tint="@color/gray" />

        </LinearLayout>

        <!-- Табы для переключения между стикерпаками -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/stickersTabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            app:tabBackground="@color/white"
            app:tabTextColor="@color/black"
            app:tabSelectedTextColor="@color/gray"
            app:tabIndicatorColor="@color/black"
            app:tabMode="scrollable"
            app:tabGravity="center" />

        <!-- ViewPager2 для отображения стикеров -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/stickersViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Фолбэк RecyclerView (если ViewPager2 не используется) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stickersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Панель управления стикерами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/btnStickerStore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_store"
                android:visibility="gone"
                app:tint="@color/black" />

            <ImageButton
                android:id="@+id/btnManageStickers"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/sticker_circle_outline"
                app:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Магазин стикеров"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/stickerPackCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/counter_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="50 наборов"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Панель ввода сообщения -->
    <LinearLayout
        android:id="@+id/llMsgCompose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_send"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/btnAttach"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/emoticon_outline"
            app:tint="@color/gray" />

        <ImageButton
            android:id="@+id/btnAttachAudio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/music_note_outline"
            app:tint="@color/gray" />

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:background="@drawable/edittext_background"
            android:gravity="center_vertical"
            android:hint="Сообщение"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:maxLines="3"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            app:tint="@color/gray"/>

    </LinearLayout>

    <!-- Защита от клавиатуры -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent" />

</LinearLayout>