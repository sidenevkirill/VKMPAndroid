<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moosic Premium"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Статус подписки -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        tools:text="Статус: Premium активен"/>

    <!-- Преимущества -->
    <TextView
        android:id="@+id/benefits_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp"
        tools:text="Преимущества Premium:\n✓ Без рекламы\n✓ Скачивание треков"/>

    <!-- Кнопка подписки -->
    <Button
        android:id="@+id/subscribe_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Оформить Premium за 299 руб/мес"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:backgroundTint="@color/black"/>

    <!-- Дополнительная информация -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подписка будет автоматически продлеваться. Вы можете отменить её в любое время."
        android:textSize="12sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Ссылка на условия -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Условия подписки"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onTermsClicked"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>